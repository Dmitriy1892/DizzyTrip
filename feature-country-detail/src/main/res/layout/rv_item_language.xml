<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_language"
        style="@style/regularText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:drawableStartCompat="@drawable/ic_dot_list"
        android:drawablePadding="4dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:lines="1"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        tools:text="Belarusian Belarusian Belarusian Belarusian Belarusian Belarusian Belarusian Belarusian Belarusian Belarusian Belarusian "/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_is_official"
        style="@style/regularText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:text="@string/official"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible" />
</LinearLayout>